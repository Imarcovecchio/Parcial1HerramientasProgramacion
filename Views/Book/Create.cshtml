                    <option value="7">Otro</option>
                </select>
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label" style="color: white; text-align: center font-weight: bold;">
                    <input class="form-check-input" asp-for="EstaReservado" /> @Html.DisplayNameFor(model => model.EstaReservado)
