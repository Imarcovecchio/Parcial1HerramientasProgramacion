                <span asp-validation-for="A単o" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genero" class="control-label" style="color: white; text-align: center font-weight: bold;"></label>
                <select asp-for="Genero" class="form-control">
                    <option value="0">Aventura</option>
                    <option value="1">Ciencia Ficcion</option>
                    <option value="2">Comedia</option>
                    <option value="3">Drama</option>
