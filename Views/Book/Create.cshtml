            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label" style="color: white; text-align: center font-weight: bold;"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Editorial" class="control-label" style="color: white; text-align: center font-weight: bold;"></label>
                <input asp-for="Editorial" class="form-control" />
                <span asp-validation-for="Editorial" class="text-danger"></span>
            </div>
