@model Book

<!-- Resto del contenido de la vista -->
<body class="profesorFondo">
<h3>Reservar</h3>
<div>
    @if (!Model.EstaReservado)
    {
        <form method="post" asp-action="Reservar" asp-controller="Book">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-primary btn-lg">Reservar Libro</button>
        </form>
    }
    else
    {
        <p>Este libro ya está reservado.</p>
        <br>
        <div class="tirar-derecha">
        <a href="@Url.Action("Index", "Book")" class="btn btn-light btn-sm">
            <img src="~/Images/arrow-left-circle.png" class="pruebatamaño" />Volver a libro
        </a>
        </div>
      
    }
</div>
</body>
