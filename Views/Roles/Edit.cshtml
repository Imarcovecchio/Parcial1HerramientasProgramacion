@using Microsoft.AspNetCore.Identity;
@model RoleEditViewModel;

<h4>Editar Rol</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <select asp-for="RoleName" asp-items="Model.RoleNames" class="form-control"></select>
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NewRoleName" class="control-label"></label>
                <input asp-for="NewRoleName" class="form-control" />
                <span asp-validation-for="NewRoleName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

