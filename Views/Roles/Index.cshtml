@using Microsoft.AspNetCore.Identity
@model List<IdentityRole> 

<body class="profesorFondo">
    <div class="container">
        <h3 class="text-center text-white">Roles</h3>

        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>Rol</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="container">
        <ul>
            <a asp-action="Create" class="btn btn-light">Crear nuevo Rol</a>
        </ul>
        <br/>
        <div class="tirar-derecha">
        <a href="@Url.Action("Index", "Profesor")" class="btn btn-light btn-sm">
            <img src="../Images/arrow-left-circle.png" class="pruebatamaÃ±o" />Volver a profesor
        </a>
        </div>
    </div>
</body>
