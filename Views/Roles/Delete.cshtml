@using Microsoft.AspNetCore.Identity;
@model RoleEditViewModel
@{
    ViewData["Title"] = "Delete";
}

<body class="profesorFondo">
<h1 class="text-center text-white">Hola, @User.Identity.Name ¿Quieres eliminar un rol?</h1>

<hr/>
<div class="row">
    <div class="col-md-4 mx-auto">
        <form asp-action="Delete" class="text-white">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label" style="color: white; font-weight: bold;">Rol a eliminar</label>
                <select asp-for="RoleName" asp-items="Model.RoleNames" class="form-select"></select>
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div class="tirar-derecha">
        <a href="@Url.Action("Index", "Roles")" class="btn btn-light btn-sm">
            <img src="~/Images/arrow-left-circle.png" class="pruebatamaño" />Volver a roles
        </a>
</div>
</body>