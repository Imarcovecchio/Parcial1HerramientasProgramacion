@model CategoriaViewModel

@{
    ViewData["Title"] = "Index";
}

<body class="profesorFondo">
    <h1 class="container display-4 rounded" style="color: white; text-align: center font-weight: bold;">Categorías</h1>
    <br>
    <div class="row">
        <form method="get" asp-action="Index" asp-controller="Categoria">
    <div class="row">
        <div class="col-6 form-group">
            <div class="input-group">
                <input class="form-control" asp-for="NameFilter"/>
                <div class="input-group-append">
                    <button class="btn btn-light ml-2" type="submit">Buscar</button>
                </div>
            </div>
        </div>
    </div>
</form>
    </div>
    <br>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Descripción
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var categoria in Model.Categorias)
            {
                <tr>
                    <td>
                        @categoria.Nombre
                    </td>
                    <td>
                        @categoria.Descripcion
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@categoria.Id" class="btn btn-outline-success btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@categoria.Id" class="btn btn-outline-danger btn-sm">Eliminar</a>
                        <a asp-action="LibrosEnCategoria" asp-route-categoriaId="@categoria.Id" class="btn btn-outline-info">LibrosEnCategoria</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br>
    <p>
        <a asp-action="CreateCategoria" class="btn btn-success">Crear nueva categoría</a>
    </p>
    <div class="tirar-derecha">
        <a href="@Url.Action("Index", "Profesor")" class="btn btn-light btn-sm">
            <img src="~/Images/arrow-left-circle.png" class="pruebatamaño" />Volver a profesor
        </a>
    </div>
</body>
