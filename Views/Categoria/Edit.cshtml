@model Categoria

@{
    ViewData["Title"] = "Edit";
}
<body class="profesorFondo">
<h4 class="container display-4 rounded" style="color: white; text-align: center font-weight: bold;">Editar Categoria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label" style="color: white; text-align: center font-weight: bold;">Categoria a editar:</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label" style="color: white; text-align: center font-weight: bold;">Descripción de categoria a editar:</label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
           <br>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

    <div class="tirar-derecha">
        <a href="@Url.Action("Index", "Categoria")" class="btn btn-light btn-sm">
            <img src="~/Images/arrow-left-circle.png" class="pruebatamaño" />Volver a Categoria
        </a>
    </div>
</body>